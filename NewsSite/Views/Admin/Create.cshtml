@model NewsSite.Models.News
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateNews"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/admin-forms.css" />
    
}

<div class="admin-form">
    <h2 style="margin-bottom: 2rem; color: #2d3748;">@Localizer["CreateNewArticle"]</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title" class="form-label">@Localizer["Title"]</label>
            <input asp-for="Title" class="form-control" placeholder="@Localizer["EnterTitle"]">
            <span asp-validation-for="Title" style="color: #f56565; font-size: 0.875rem;"></span>
        </div>

        <div class="form-group">
            <label asp-for="Subtitle" class="form-label">@Localizer["Subtitle"]</label>
            <input asp-for="Subtitle" class="form-control" placeholder="@Localizer["EnterSubtitle"]">
            <span asp-validation-for="Subtitle" style="color: #f56565; font-size: 0.875rem;"></span>
        </div>

        <div class="form-group">
            <label class="form-label">@Localizer["NewsImage"]</label>
  
            <div class="file-input-container">
                <input asp-for="ImageFile" type="file" class="custom-file-input" id="imageFile" accept="image/*">
                <label for="imageFile" class="file-input-label">📷 @Localizer["ChooseFile"]</label>
                <span id="fileName" class="file-name">@Localizer["NoFileChosen"]</span>
            </div>
            <small style="color: #718096; display: block; margin-top: 0.5rem;">@Localizer["SupportedFormats"]</small>
            <span asp-validation-for="ImageFile" style="color: #f56565; font-size: 0.875rem;"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="form-label">@Localizer["Content"]</label>
            <textarea asp-for="Content" class="form-control" rows="6" placeholder="@Localizer["WriteContent"]"></textarea>
            <span asp-validation-for="Content" style="color: #f56565; font-size: 0.875rem;"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">@Localizer["CreateNewsButton"]</button>
            <a href="/Admin/NewsList" class="btn btn-secondary">@Localizer["Cancel"]</a>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        document.getElementById('imageFile').addEventListener('change', function(e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : '@Localizer["NoFileChosen"]';
            document.getElementById('fileName').textContent = fileName;
        });
    </script>
}