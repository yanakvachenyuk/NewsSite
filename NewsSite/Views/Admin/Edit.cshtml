@model NewsSite.Models.News
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditNews"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/admin-forms.css" />
}

<div class="admin-form edit-page">
    <h2>@Localizer["EditArticle"]</h2>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="form-label">@Localizer["Title"]</label>
            <input asp-for="Title" class="form-control" placeholder="@Localizer["EnterTitle"]">
            <span asp-validation-for="Title" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Subtitle" class="form-label">@Localizer["Subtitle"]</label>
            <input asp-for="Subtitle" class="form-control" placeholder="@Localizer["EnterSubtitle"]">
            <span asp-validation-for="Subtitle" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label class="form-label">@Localizer["NewsImage"]</label>

            <div class="file-input-container">
                <input asp-for="ImageFile" type="file" class="custom-file-input" id="editImageFile" accept="image/*">
                <label for="editImageFile" class="file-input-label">📷 @Localizer["ChooseFile"]</label>
                <span id="editFileName" class="file-name">@Localizer["NoFileChosen"]</span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <div style="margin-top: 0.5rem;">
                    <small style="color: #718096;">@Localizer["CurrentImage"]</small>
                    <img src="/uploads/news/@Model.ImageFileName" style="max-width: 200px; display: block; margin-top: 0.5rem; border-radius: 0.5rem;">
                </div>
            }

            <small style="color: #718096; display: block; margin-top: 0.5rem;">@Localizer["SupportedFormats"]</small>
            <span asp-validation-for="ImageFile" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="form-label">@Localizer["Content"]</label>
            <textarea asp-for="Content" class="form-control" rows="6" placeholder="@Localizer["WriteContent"]"></textarea>
            <span asp-validation-for="Content" class="validation-error"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">@Localizer["UpdateNews"]</button>
            <a href="/Admin/NewsList" class="btn btn-secondary">@Localizer["Cancel"]</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
       
        document.getElementById('editImageFile').addEventListener('change', function(e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : '@Localizer["NoFileChosen"]';
            document.getElementById('editFileName').textContent = fileName;
        });
    </script>
}
